{
  "appName": "YouTube Radar",
  "appVersion": "1.0.0",
  "description": "YouTube频道活动监控雷达",
  "author": "Your Name",
  "main": "electron-main.js",
  "build": {
    "appId": "com.yourcompany.youtube-radar",
    "productName": "YouTube Radar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "language": "2052"
    },
    "extraMetadata": {
      "main": "electron-main.js"
    }
  }
}